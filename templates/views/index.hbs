<html>

<head>
    <title>Weather forecast</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,minimum-scale=1,maximum-scale=1">
    <link rel="icon" href="/img/weather.png">
    <link rel="stylesheet" href="/css/semantic-ui/semantic.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="site">

    {{>header}}

    <div class="site-content">
        <div class="ui center aligned text container">
            <form class="ui huge form">
                <div class="ui action input">
                    <input type="text" placeholder="Location">
                    <button class="ui orange icon button">
                        <i class="search icon"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="ui section divider"></div>

        <div class="ui text container">

            <div class="ui centered inline big loader"></div>
            <div class="ui red hidden message">
                <p id="error-message"></p>
            </div>

            <p id="location-message"></p>
            <p id="forecast-message"></p>
        </div>


    </div>
    {{>footer}}

    <script src="/js/app.js"></script>
</body>

</html>